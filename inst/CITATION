citHeader("To cite sure in publications use:")

citEntry(entry = "Article",
         title        = "Residuals and diagnostics for binary and ordinal regression models: An introduction to the sure package.",
         author       = personList(as.person("Brandon M. Greenwell"),
                                   as.person("Andrew J. McCarthy"),
                                   as.person("Bradley C. Boehmke"),
                                   as.person("Dungang Lui")),
         journal      = "The R Journal",
         year         = "2018",
         volume       = "10",
         number       = "1",
         pages        = "1--14",
         url          = "https://journal.r-project.org/archive/2018/RJ-2018-004/index.html",

         textVersion  =
           paste("Brandon M. Greenwell, Andrew J. McCarthy, Bradley C. Boehmke, Dungang Lui (2018).",
                 "Residuals and diagnostics for binary and ordinal regression models: An introduction to the sure package.",
                 "The R Journal, 10(1), 1--14.",
                 "URL https://journal.r-project.org/archive/2018/RJ-2018-004/index.html.")
)
